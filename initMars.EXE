import colorama
import os



class mars:
    # import langMars as Lang
    Stream = print
    Collect = input
    def Clear():
        if os.name == "nt":
            os.system("cls")
        else:
            os.system("clear")

    class Setting:
        UserLang = open(".\\settingsMars.MCFG\\usrLangSel1.ENT", 'r').read()
        FirstTime = open(".\\settingsMars.MCFG\\firstTmUp.ENT", "r").read()
        
    # class WriteSetting:
